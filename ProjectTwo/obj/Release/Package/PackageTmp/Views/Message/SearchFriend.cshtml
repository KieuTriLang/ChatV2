@model IEnumerable<ProjectTwo.Models.ApplicationUser>

@if (Model.Count() > 0)
{

    foreach (var item in Model)
    {
        <li class="result-item">
            <input type="hidden" name="id" value="@item.Id" />
            <div class="image">
                @if (item.Avatar != null)
                {
                    <img src="@item.Avatar" />
                }
                else
                {
                    @item.UserName.Substring(0, 2)
                }
            </div>
            @{ 
                string userName = item.DisplayName != null ? item.DisplayName : item.UserName;
            }
            <span class="tooltip">@userName <br /><small>@item.Email</small></span>
        </li>
    }
}
